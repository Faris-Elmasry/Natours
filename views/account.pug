extends base

mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('#settings', 'Settings', 'settings', true)
          +navItem('#bookings', 'My bookings', 'briefcase')
          - if (user.role === 'user')
            +navItem('#reviews', 'My reviews', 'star')
          +navItem('#billing', 'Billing', 'credit-card')

        - if (user.role === 'admin')
          .admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('#manage-tours', 'Manage tours', 'map')
              +navItem('#manage-users', 'Manage users', 'users')
              +navItem('#manage-reviews', 'Manage reviews', 'star')
              +navItem('#manage-bookings', 'Manage bookings', 'briefcase')

      .user-view__content
        // SETTINGS SECTION (Default)
        #settings.user-view__form-container.active
          h2.heading-secondary.ma-bt-md Your account settings
          
          form.form.form-user-data
            .form__group
              label.form__label(for='name') Name
              input#name.form__input(type='text', value=`${user.name}`, required, name='name')
            .form__group.ma-bt-md
              label.form__label(for='email') Email address
              input#email.form__input(type='email', value=`${user.email}`, required, name='email')
            .form__group.form__photo-upload
              - const photoUrl = user.photo.startsWith('http') ? user.photo : `/img/users/${user.photo}`
              img.form__user-photo(src=photoUrl, alt='User photo')
              input.form__upload(type='file', accept='image/*', id='photo', name='photo')
              label(for='photo') Choose new photo
            .form__group.right
              button.btn.btn--small.btn--green Save settings
              
        .line &nbsp;
        
        #settings.user-view__form-container
          h2.heading-secondary.ma-bt-md Password change
          form.form.form-user-password
            .form__group
              label.form__label(for='password-current') Current password
              input#password-current.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group
              label.form__label(for='password') New password
              input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-lg
              label.form__label(for='password-confirm') Confirm password
              input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.right
              button.btn.btn--small.btn--green.btn--save-password Save password

        // MY BOOKINGS SECTION
        #bookings.user-view__form-container
          h2.heading-secondary.ma-bt-md My Bookings
          .user-view__card-container
            if myTours && myTours.length > 0
              each tour in myTours
                 .card(style="margin-bottom: 20px; width: 100%;")
                   .card__header
                     .card__picture
                        .card__picture-overlay &nbsp;
                        img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                     h3.heading-tertirary
                        span= tour.name
                   .card__details
                      p.card__text(style="margin-bottom: 10px;")= tour.summary
                      a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) View Tour
            else
              p You have not booked any tours yet.

        // MY REVIEWS SECTION
        - if (user.role === 'user')
          #reviews.user-view__form-container
            h2.heading-secondary.ma-bt-md My Reviews
            .user-view__card-container
              if myReviews && myReviews.length > 0
                each review in myReviews
                  .reviews__card
                    .reviews__avatar
                      img.reviews__avatar-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
                      h6.reviews__user= review.tour.name
                    p.reviews__text= review.review
                    .reviews__rating
                      each star in [1, 2, 3, 4, 5]
                        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
                          use(xlink:href='/img/icons.svg#icon-star')
              else
                 p You have not written any reviews yet.

        // BILLING SECTION
        #billing.user-view__form-container
          h2.heading-secondary.ma-bt-md Billing Information
          #billing-container
            p(style='color: #999;') Billing history will be displayed here.

        // ADMIN SECTIONS (Only visible to admins)
        - if (user.role === 'admin')
          .line &nbsp;

          #manage-tours.user-view__form-container.user-view__form-container--wide
            h2.heading-secondary.ma-bt-md Manage Tours
            #admin-tours-container Loading tours...

          .line &nbsp;

          #manage-users.user-view__form-container.user-view__form-container--wide
            h2.heading-secondary.ma-bt-md Manage Users
            #admin-users-container Loading users...

          .line &nbsp;

          #manage-reviews.user-view__form-container.user-view__form-container--wide
            h2.heading-secondary.ma-bt-md Manage Reviews
            #admin-reviews-container Loading reviews...

          .line &nbsp;

          #manage-bookings.user-view__form-container.user-view__form-container--wide
            h2.heading-secondary.ma-bt-md Manage Bookings
            #admin-bookings-container Loading bookings...
